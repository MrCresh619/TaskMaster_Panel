{
	"env": {
		"browser": true,
		"es2021": true,
		"node": true
	},
	"extends": [
		"eslint:recommended",
		"plugin:@typescript-eslint/recommended",
		"plugin:react/recommended",
		"prettier"
	],
	"parser": "@typescript-eslint/parser",
	"parserOptions": {
		"ecmaVersion": "latest",
		"sourceType": "module"
	},
	"plugins": ["@typescript-eslint", "react", "@typescript-eslint/eslint-plugin", "eslint-plugin-react"],
	"rules": {
		"react/prop-types": ["off"],
		"react/react-in-jsx-scope": ["off"]
	}
}
